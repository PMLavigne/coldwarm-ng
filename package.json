{
  "name": "coldwarm-ng",
  "version": "0.0.1",
  "description": "HTML5 implementation of coldwarm photoshop plugin",
  "scripts": {
    "clean": "rimraf build && mkdirp build",
    "lint": "eslint src --fix",
    "copy": "npm run copy:html && npm run copy:lib && npm run copy:manifest",
    "copy:html": "cp src/index.html build/index.html",
    "copy:lib": "mkdirp build/lib && cp -r src/lib/* build/lib",
    "copy:manifest": "mkdirp build/CSXS && hbsutil -s -v -e -d build/CSXS -f package.json src/CSXS/manifest.xml.hbs",
    "copy:debugConf": "touch .debug && cp .debug build/.debug",
    "build:dev": "npm run copy:debugConf && webpack --debug --devtool source-map",
    "build:debug": "npm run copy:debugConf && webpack --debug --devtool source-map -w",
    "build": "webpack -p && rm build/js/style.js",
    "dev": "npm run clean && npm run lint && npm run copy && npm run build:dev",
    "debug": "npm run clean && npm run lint && npm run copy && npm run build:debug",
    "release": "npm run clean && npm run lint && npm run copy && npm run build && npm test",
    "test": "jest --no-cache -c test/config.json",
    "test:dev": "node $NODE_DEBUG_OPTION node_modules/.bin/jest --runInBand --no-cache -c test/config.dev.json 2>&1"
  },
  "author": "Patrick Lavigne <me@patrick.codes> (https://github.com/PMLavigne)",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.3.2",
    "babel-plugin-rewire": "^1.0.0",
    "babel-plugin-transform-decorators": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-types": "^6.23.0",
    "commander": "^2.9.0",
    "css-loader": "^0.26.1",
    "eslint": "^3.16.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "extract-text-webpack-plugin": "^2.0.0-rc.3",
    "handlebars": "^4.0.6",
    "hbsutil": "^0.3.0",
    "jest-cli": "^19.0.2",
    "mkdirp": "^0.5.1",
    "mz": "^2.6.0",
    "node-sass": "^4.5.0",
    "rimraf": "^2.6.0",
    "sass-loader": "^6.0.2",
    "source-map-loader": "^0.1.6",
    "webpack": "^2.2.1"
  },
  "csxsManifest": {
    "displayName": "Coldwarm NG",
    "bundleId": "codes.patrick.coldwarm-ng",
    "runtime": {
      "name": "CSXS",
      "version": "5.0"
    },
    "hosts": {
      "PHSP": "[15,18.9]",
      "PHXS": "[15,18.9]"
    },
    "extensions": {
      "picker": {
        "resources": {
          "main": "./index.html"
        },
        "ui": {
          "type": "Panel",
          "menu": "ColdWarm NG",
          "geometry": {
            "size": {
              "height": 400,
              "width": 400
            }
          }
        }
      }
    }
  },
  "dependencies": {
    "jquery": "^3.1.1"
  }
}
